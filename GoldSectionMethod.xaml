<Window x:Class="MultiWindowApp.GoldenSectionMethod"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="Метод золотого сечения" Height="780" Width="1040"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                   Text="Нахождение экстремума/корня функции методом золотого сечения&#xA;                      Для возведения в степень используйте pow()" 
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

        <!-- Выбор типа поиска -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Тип поиска:" Margin="0,5" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="10,5">
            <RadioButton Name="MinRadioButton" Content="Минимум" IsChecked="True" Margin="0,0,20,0" GroupName="SearchType"/>
            <RadioButton Name="MaxRadioButton" Content="Максимум" Margin="0,0,20,0" GroupName="SearchType"/>
            <RadioButton Name="RootRadioButton" Content="Корень (f(x)=0)" GroupName="SearchType"/>
        </StackPanel>

        <!-- Ввод функции -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Функция f(x):" Margin="0,5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="2" Grid.Column="1" Name="FunctionTextBox" Margin="10,5" Padding="5" 
                 Text="pow(x,2) - 4" 
                 ToolTip="Примеры: x^2-4, sin(x), 1/x, log(x), exp(x), sqrt(x+1), abs(x-3), pow(x,3)"/>

        <!-- Интервал [a, b] -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Интервал [a, b]:" Margin="0,5" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="10,5">
            <TextBox Name="TextBoxA" Width="80" Margin="0,0,10,0" Padding="5" Text="-10"/>
            <TextBlock Text="до" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Name="TextBoxB" Width="80" Padding="5" Text="10"/>
        </StackPanel>

        <!-- Точность -->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Точность ε:" Margin="0,5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="4" Grid.Column="1" Name="TextBoxEpsilon" Margin="10,5" Padding="5" Text="0.0001"/>

        <!-- Кнопка расчета -->
        <Button Grid.Row="5" Grid.ColumnSpan="2" Name="CalculateButton" Content="Вычислить и построить график" 
                Click="CalculateButton_Click" Margin="0,20" Padding="15,5" FontSize="14" 
                Background="#FF0078D7" Foreground="White" FontWeight="Bold"/>

        <!-- Результаты -->
        <TextBlock Grid.Row="6" Grid.ColumnSpan="2" Name="ResultTextBlock" Margin="0,10,0,10" 
                   TextWrapping="Wrap" FontSize="12" TextAlignment="Left"/>

        <!-- Область для графика -->
        <Grid Grid.Row="7" Grid.ColumnSpan="2">
            <oxy:PlotView Name="PlotView" Background="White"/>
        </Grid>

        <!-- Кнопка назад -->
        <Button Grid.Row="8" Grid.ColumnSpan="2" Content="Назад" Click="BackButton_Click" 
                Margin="0,10" Padding="10,5" Width="80" HorizontalAlignment="Right"/>
    </Grid>
</Window>