<Window x:Class="MultiWindowApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Главное меню" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Выберите задание для выполнения" 
                   FontSize="20" FontWeight="Bold" Margin="0,0,0,30" 
                   HorizontalAlignment="Center" Foreground="#FF0078D7"/>

        <!-- Сетка кнопок -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Кнопки заданий -->
            <Button Grid.Row="0" Grid.Column="0" Content="Задание 1&#xA;Метод дихотомии" 
                    Margin="10" Click="ChooseTask_Click" FontSize="14" FontWeight="SemiBold"
                    Background="#FF0078D7" Foreground="White" BorderThickness="0"
                    Cursor="Hand"/>

            <Button Grid.Row="0" Grid.Column="1" Content="Задание 2&#xA;Решение СЛАУ" 
                    Margin="10" Click="ChooseTask_Click" FontSize="14" FontWeight="SemiBold"
                    Background="#FF0078D7" Foreground="White" BorderThickness="0"
                    Cursor="Hand"/>

            <Button Grid.Row="0" Grid.Column="2" Content="Задание 3&#xA;Метод Золотого Сечения" 
                    Margin="10" Click="ChooseTask_Click" FontSize="14" FontWeight="SemiBold"
                    Background="#FF0078D7" Foreground="White" BorderThickness="0"
                    Cursor="Hand"/>

            <Button Grid.Row="1" Grid.Column="0" Content="Задание 4&#xA;Метод Ньютона" 
                    Margin="10" Click="ChooseTask_Click" FontSize="14" FontWeight="SemiBold"
                    Background="#FF0078D7" Foreground="White" BorderThickness="0"
                    Cursor="Hand"/>

            <Button Grid.Row="1" Grid.Column="1" Content="Задание 5&#xA;Олимпиадные Сортировки" 
                    Margin="10" Click="ChooseTask_Click" FontSize="14" FontWeight="SemiBold"
                    Background="#FF0078D7" Foreground="White" BorderThickness="0"
                    Cursor="Hand"/>

            <Button Grid.Row="1" Grid.Column="2" Content="Задание 6" 
                    Margin="10" Click="ChooseTask_Click" FontSize="14" FontWeight="SemiBold"
                    Background="#FF0078D7" Foreground="White" BorderThickness="0"
                    Cursor="Hand"/>

            <Button Grid.Row="2" Grid.Column="0" Content="Задание 7" 
                    Margin="10" Click="ChooseTask_Click" FontSize="14" FontWeight="SemiBold"
                    Background="#FF0078D7" Foreground="White" BorderThickness="0"
                    Cursor="Hand"/>

            <Button Grid.Row="2" Grid.Column="1" Content="Задание 8" 
                    Margin="10" Click="ChooseTask_Click" FontSize="14" FontWeight="SemiBold"
                    Background="#FF0078D7" Foreground="White" BorderThickness="0"
                    Cursor="Hand"/>

            <Button Grid.Row="2" Grid.Column="2" Content="Задание 9" 
                    Margin="10" Click="ChooseTask_Click" FontSize="14" FontWeight="SemiBold"
                    Background="#FF0078D7" Foreground="White" BorderThickness="0"
                    Cursor="Hand"/>
        </Grid>

        <!-- Подсказка -->
        <TextBlock Grid.Row="2" Text="Для начала работы выберите одно из заданий" 
                   Margin="0,20,0,0" HorizontalAlignment="Center" 
                   Foreground="Gray" FontSize="12"/>
    </Grid>
</Window>