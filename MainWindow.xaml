<Window x:Class="myLAB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Главное меню" Height="600" Width="800">
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Content="Выберите номер задания:" Margin ="205,35,257,95" Grid.ColumnSpan="3" FontFamily="Arial Black" FontSize="22" Grid.RowSpan="2"/>

        <Button Grid.Row="1" Grid.Column="0" Content="Задание 1" Margin="10" Click="СhooseTask_Click"/>
        <Button Grid.Row="1" Grid.Column="1" Content="Задание 2" Margin="10" Click="СhooseTask_Click"/>
        <Button Grid.Row="1" Grid.Column="2" Content="Задание 3" Margin="10" Click="СhooseTask_Click"/>

        <Button Grid.Row="2" Grid.Column="0" Content="Задание 4" Margin="10" Click="СhooseTask_Click"/>
        <Button Grid.Row="2" Grid.Column="1" Content="Задание 5" Margin="10" Click="СhooseTask_Click"/>
        <Button Grid.Row="2" Grid.Column="2" Content="Задание 6" Margin="10" Click="СhooseTask_Click"/>

        <Button Grid.Row="3" Grid.Column="0" Content="Задание 7" Margin="10" Click="СhooseTask_Click"/>
        <Button Grid.Row="3" Grid.Column="1" Content="Задание 8" Margin="10" Click="СhooseTask_Click"/>
        <Button Grid.Row="3" Grid.Column="2" Content="Задание 9" Margin="10" Click="СhooseTask_Click"/>

    </Grid>

</Window>