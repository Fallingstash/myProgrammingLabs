<Window x:Class="MultiWindowApp.DichotomyMethod"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:oxy="http://oxyplot.org/wpf"
    Title="Метод дихотомии" Height="700" Width="900"
    WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Нахождение нулей функции методом дихотомии&#xA;   Для возведения в степень используйте pow()" 
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

        <!-- Ввод функции -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Функция f(x):" Margin="0,5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" Name="FunctionTextBox" Margin="10,5" Padding="5" 
                 Text="pow(x,2) - 4" ToolTip="Поддерживаются: sin(x), cos(x), sqrt(x), log(x), exp(x), abs(x)"/>

        <!-- Интервал [a, b] -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Интервал [a, b]:" Margin="0,5" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="10,5">
            <TextBox Name="TextBoxA" Width="80" Margin="0,0,10,0" Padding="5" Text="-10"/>
            <TextBlock Text="до" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Name="TextBoxB" Width="80" Padding="5" Text="10"/>
        </StackPanel>

        <!-- Точность -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Точность ε:" Margin="0,5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="3" Grid.Column="1" Name="TextBoxEpsilon" Margin="10,5" Padding="5" Text="0.0001"/>

        <!-- Кнопка расчета -->
        <Button Grid.Row="4" Grid.ColumnSpan="2" Content="Найти корни и построить график" 
                Click="CalculateButton_Click" Margin="0,20" Padding="15,5" FontSize="14" 
                Background="#FF0078D7" Foreground="White" FontWeight="Bold"/>

        <!-- Результаты -->
        <TextBlock Grid.Row="5" Grid.ColumnSpan="2" Name="ResultTextBlock" Margin="0,10" TextWrapping="Wrap" FontSize="12"/>

        <!-- Область для графика -->
        <Grid Grid.Row="6" Grid.ColumnSpan="2" Margin="0,20">
            <oxy:PlotView Name="PlotView" Background="White"/>
        </Grid>

        <!-- Кнопка назад -->
        <Button Grid.Row="7" Grid.ColumnSpan="2" Content="Назад" Click="BackButton_Click" 
                Margin="0,10" Padding="10,5" Width="80" HorizontalAlignment="Right"/>
    </Grid>
</Window>