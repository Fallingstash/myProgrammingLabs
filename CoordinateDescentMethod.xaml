<Window x:Class="MultiWindowApp.CoordinateDescentMethod"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiWindowApp"
        mc:Ignorable="d"
        Title="CoordinateDescentMethod" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                   Text="Нахождение минимума функции нескольких переменных методом покоординатного спуска&#xA;Пример: f(x,y) = x^2 + y^2 + 2*x*y + sin(x) + cos(y)" 
                   FontSize="14" FontWeight="Bold" Margin="0,0,0,20" 
                   HorizontalAlignment="Center" TextWrapping="Wrap"/>

        <!-- Ввод функции -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Функция f(x,y,...):" Margin="0,5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" Name="FunctionTextBox" Margin="10,5" Padding="5" 
                 Text="x^2 + y^2" 
                 ToolTip="Используйте переменные x, y, z. Примеры: x^2+y^2, sin(x)+cos(y), x*y+exp(-x^2-y^2)"/>

        <!-- Начальное приближение -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Начальная точка:" Margin="0,5" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="10,5">
            <TextBlock Text="x0 =" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox Name="TextBoxX0" Width="80" Margin="0,0,20,0" Padding="5" Text="1"/>
            <TextBlock Text="y0 =" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox Name="TextBoxY0" Width="80" Margin="0,0,20,0" Padding="5" Text="1"/>
            <TextBlock Text="z0 =" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox Name="TextBoxZ0" Width="80" Padding="5" Text="1"/>
            <TextBlock Text="(оставьте пустым, если не используется)" VerticalAlignment="Center" 
                       Margin="10,0,0,0" FontStyle="Italic" Foreground="Gray"/>
        </StackPanel>

        <!-- Область поиска -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Область поиска:" Margin="0,5" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="10,5">
            <TextBlock Text="x ∈ [" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox Name="TextBoxXmin" Width="60" Padding="3" Text="-10"/>
            <TextBlock Text="," VerticalAlignment="Center" Margin="2,0,2,0"/>
            <TextBox Name="TextBoxXmax" Width="60" Padding="3" Text="10"/>
            <TextBlock Text="]" VerticalAlignment="Center" Margin="5,0,20,0"/>

            <TextBlock Text="y ∈ [" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox Name="TextBoxYmin" Width="60" Padding="3" Text="-10"/>
            <TextBlock Text="," VerticalAlignment="Center" Margin="2,0,2,0"/>
            <TextBox Name="TextBoxYmax" Width="60" Padding="3" Text="10"/>
            <TextBlock Text="]" VerticalAlignment="Center" Margin="5,0,20,0"/>

            <TextBlock Text="z ∈ [" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox Name="TextBoxZmin" Width="60" Padding="3" Text="-10"/>
            <TextBlock Text="," VerticalAlignment="Center" Margin="2,0,2,0"/>
            <TextBox Name="TextBoxZmax" Width="60" Padding="3" Text="10"/>
            <TextBlock Text="]" VerticalAlignment="Center" Margin="5,0,0,0"/>
        </StackPanel>

        <!-- Параметры метода -->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Параметры метода:" Margin="0,5" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" Margin="10,5">
            <TextBlock Text="Точность ε:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox Name="TextBoxEpsilon" Width="80" Margin="0,0,20,0" Padding="5" Text="0.0001"/>

            <TextBlock Text="Макс. итераций:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox Name="TextBoxMaxIterations" Width="80" Margin="0,0,20,0" Padding="5" Text="1000"/>

            <TextBlock Text="Шаг спуска:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox Name="TextBoxStepSize" Width="80" Padding="5" Text="0.1"/>
        </StackPanel>

        <!-- Кнопка расчета -->
        <Button Grid.Row="5" Grid.ColumnSpan="2" Name="CalculateButton" Content="Найти минимум" 
                Click="CalculateButton_Click" Margin="0,20" Padding="15,5" FontSize="14" 
                Background="#FF0078D7" Foreground="White" FontWeight="Bold"/>

        <!-- Информация о процессе -->
        <TextBlock Grid.Row="6" Grid.ColumnSpan="2" Name="ProgressTextBlock" Margin="0,10,0,5" 
                   TextWrapping="Wrap" FontSize="11" Foreground="DarkBlue"/>

        <!-- Результаты -->
        <TextBlock Grid.Row="7" Grid.ColumnSpan="2" Name="ResultTextBlock" Margin="0,10,0,10" 
                   TextWrapping="Wrap" FontSize="12"/>

        <!-- Область для графика (для 2D функций) -->
        <Grid Grid.Row="8" Grid.ColumnSpan="2">
            <oxy:PlotView Name="PlotView" Background="White"/>
        </Grid>

        <!-- Кнопка назад -->
        <Button Grid.Row="9" Grid.ColumnSpan="2" Content="Назад" Click="BackButton_Click" 
                Margin="0,10" Padding="10,5" Width="80" HorizontalAlignment="Right"/>
    </Grid>
</Window>
